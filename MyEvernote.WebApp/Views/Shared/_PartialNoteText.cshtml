
@using MyEvernote.Entites
@model Note

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12 text-right">
        <span class="bi bi-person-fill"></span>@Model.Owner.Username<br />
        <span class="bi bi-clock-fill"></span>@Model.ModifiedOn<br />
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>