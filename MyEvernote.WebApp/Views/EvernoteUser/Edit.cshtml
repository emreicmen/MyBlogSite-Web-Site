@model MyEvernote.Entites.EvernoteUser

<link href="~/categoryPagesCss.css" rel="stylesheet" />
<link href="~/validationSummaryCss.css" rel="stylesheet" />

<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="card px-1 py-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="card-body">
            <h4 class="card-title mb-3 d-flex justify-content-center">Kullanıcı Bilgileri Düzenleme</h4>
            @Html.ValidationSummary(false)
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-3 mt-2" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-3 mt-2" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3 mt-2" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3 mt-2" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group col-6 d-flex justify-content-center">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6 d-flex justify-content-center">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsActive)
                        </div>
                    </div>
                </div>

                <div class="form-group col-6 d-flex justify-content-center">
                    @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6 d-flex justify-content-center">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsAdmin)
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                @Bootstrap.Button("success", string.Empty, "submit", "check-all", " Save")
                @Bootstrap.LinkButton("/EvernoteUser/Index/", "primary", string.Empty, string.Empty, "arrow-left-circle", "Back to List")
            </div>

        </div>
        }
    </div>
</div>