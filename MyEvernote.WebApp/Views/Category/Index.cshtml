@using MyEverNote.WebApp

@model IEnumerable<MyEvernote.Entites.Category>

@{
    ViewBag.Title = "Kategoriler";
}
<div class="row m-4 d-flex justify-content-center">
    <div class="col-md-10 col-md-offset-1 m-4 d-flex justify-content-center">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="row m-4 d-flex justify-content-center">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Category/Create" class="btn btn-primary">
                <span class="bi-file-plus"> Create</span>
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        @Bootstrap.LinkButton("/Category/Edit/" + item.Id, "warning", "btn-xs", "Edit", "pencil-square", string.Empty)

                        @Bootstrap.LinkButton("/Category/Details/" + item.Id, "info", "btn-xs", "Detail", "search", string.Empty)

                        @Bootstrap.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash3-fill", string.Empty)
                        
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

