@using MyEvernote.Entites.ValueObjects
@model RegisterViewModel

@{
    ViewBag.Title = "Kayıt Olma Sayfası";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/LoginRegisterCss.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="row">
                    <div class="card-header">
                        <h3>Kayıt Ol</h3>
                        @Html.ValidationSummary(false)

                    </div>
                    <div class="card-body">
                        <div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı giriniz...." })
                                </div>

                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail adresinizi giriniz...." })
                                </div>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi giriniz....", type = "password" })
                                </div>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifrenizi tekrar giriniz....", type = "password" })
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" value="Login" class=" btn btn-warning">Kayıt OL</button>
                            </div>
                        </div>
                    </div>
                    <div class="bg-dark">
                        <div class="d-flex justify-content-center links">
                            Hesabınız mı? Giriş yapın....<a href="/Home/Login">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
