@using MyEvernote.Entites.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "Giriş Sayfası";
}

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/LoginRegisterCss.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Giriş Yap</h3>
                        @Html.ValidationSummary(false)
                        <hr />
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı giriniz...." })
                                </div>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi giriniz....", type = "password" })
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" value="Login" class=" btn btn-warning">Giriş yap</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
