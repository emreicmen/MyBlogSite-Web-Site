@helper ModalPopup(string id = "myModal", string title = "Modal Title", bool showCloseButton = true)
{
    <div class="modal" tabindex="-1" id="@id" name="@id" role="dialog" aria-labelledby="@(id+ "_label")">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="@(id+ "_header")">
                    <h5 class="modal-title" id="@(id+ "_label")">@title</h5>
                </div>
                <div class="modal-body" id="@(id+ "_body")">
                </div>
                <div class="modal-footer" id="@(id+ "_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Kapat</button>
                    }
                </div>
            </div>
        </div>
    </div>
}